{% extends "__layout.twig" %}


{% block content %}
   
    Последние сообщения:<br>
    {% for m in messages %}
    {{ m }}<br>       
    {% endfor %}
    <hr>


    {{ description|raw }}

   
    <ul class="nav nav-pills align-items-center mt-3">
        <li class="nav-item">
            <a class="nav-link pb-3 {{ image ? 'active' }}" href="/space-object/{{ id }}/image">Картинка</a>
        </li>
        <li class="nav-item">
            <a class="nav-link pb-3 {{ info ? 'active' }}" href="/space-object/{{ id }}/info">Описание</a>
        </li>
    </ul>

    <ul class="list-group">
        <li class="list-group-item p-4" style='margin-top: -12px;'>
            {% block pageInner %}
                {% if info is defined %}
                    {{ info|raw }}                    
                {% elseif image is defined %}
                    <img src="{{ image|raw }}" width='500'>
                {% else %}
                    Выберите ту информацию, которую хотите посмотреть =О
                {% endif %}
            {% endblock %}
        </li>
    </ul>
{% endblock %}

